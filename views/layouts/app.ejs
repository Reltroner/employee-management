<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || "Employee Management" %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css" />

  <style>
    #wrapper {
      display: flex;
      flex-wrap: nowrap;
    }

    #sidebar-wrapper {
      width: 250px;
      min-height: 100vh;
      transition: all 0.3s ease;
      background-color: #f8f9fa;
    }

    #page-content-wrapper {
      flex: 1;
      transition: margin-left 0.3s ease;
    }

    #wrapper.toggled #sidebar-wrapper {
      margin-left: -250px;
    }

    @media (max-width: 768px) {
      #sidebar-wrapper {
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
      }

      #wrapper.toggled #sidebar-wrapper {
        margin-left: -250px;
      }

      #page-content-wrapper {
        padding-left: 0;
      }
    }
  </style>
</head>
<body>
  <div class="d-flex" id="wrapper">
    <!-- Sidebar Based on Role -->
    <% if (currentUser && currentUser.role === 'Admin') { %>
      <%- include('partials/sidebar-admin') %>
    <% } else if (currentUser && currentUser.role === 'Manager') { %>
      <%- include('partials/sidebar-manager') %>
    <% } else if (currentUser && currentUser.role === 'Employee') { %>
      <%- include('partials/sidebar-employee') %>
    <% } else { %>
      <%- include('partials/sidebar') %> <!-- fallback/default -->
    <% } %>

    <!-- Page Content -->
    <div id="page-content-wrapper" class="w-100">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
        <div class="container-fluid">
          <button class="btn btn-outline-light" id="menu-toggle">â˜°</button>
          <a class="navbar-brand ms-3" href="/">Employee Management</a>
        </div>
      </nav>

      <!-- Page Body -->
      <main class="container-fluid mt-4">
        <%- include('partials/alert') %>
        <%- body %>
      </main>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

  <!-- Sidebar Toggle Script -->
  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const wrapper = document.getElementById('wrapper');
    menuToggle.addEventListener('click', () => {
      wrapper.classList.toggle('toggled');
    });
  </script>
</body>
</html>
