<div class="container mt-4">
    <h2 class="text-center">Manager List</h2>
  
    <div class="d-flex justify-content-between align-items-center mb-3">
      <a href="/managers/create" class="btn btn-success">+ Add New Manager</a>
      <form class="d-flex ms-auto" method="GET" action="/managers">
        <input type="text" name="search" class="form-control me-2" placeholder="Search managers..." value="<%= searchQuery || '' %>">
        <button type="submit" class="btn btn-secondary">Search</button>
      </form>
    </div>
  
    <table class="table table-bordered table-striped text-center">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Department</th>
          <th>Position</th>
          <th>Status</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (managers.length > 0) { %>
          <% managers.forEach((manager, index) => { %>
            <% if (manager.role === 'Manager') { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= manager.name %></td>
                <td><%= manager.email %></td>
                <td><%= manager.phone %></td>
                <td><%= manager.department %></td>
                <td><%= manager.position %></td>
                <td><%= manager.status %></td>
                <td><span class="badge bg-primary">Manager</span></td>
                <td>
                  <div class="d-flex justify-content-center gap-2">
                    <a href="/managers/<%= manager._id %>" class="btn btn-info btn-sm">View</a>
                    <a href="/managers/<%= manager._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/managers/<%= manager._id %>?_method=DELETE" method="POST" style="margin: 0;">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this manager?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% } %>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="9" class="text-center">No managers found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  