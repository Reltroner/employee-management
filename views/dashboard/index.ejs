<!-- views/dashboard/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h2>Welcome, <%= user.profile.name %>!</h2>
  <p class="text-muted">Role: <%= user.role %></p>

  <% if (qrImage) { %>
    <div class="card mt-4 p-3">
      <h5>Your QR Code for Today</h5>
      <img src="<%= qrImage %>" alt="Daily QR Code" class="img-fluid" style="max-width: 250px;">
      <p class="text-muted mt-2">Valid until 23:59 today</p>
    </div>
  <% } else { %>
    <div class="alert alert-warning mt-4">No QR code available.</div>
  <% } %>

  <div class="mt-4">
    <a href="/attendance/log" class="btn btn-outline-primary">View Daily Attendance Log</a>
    <a href="/attendance/scan" class="btn btn-outline-success">Scan Attendance</a>
    <a href="/attendance/history" class="btn btn-outline-dark">My Attendance History</a>
  </div>
</body>
</html>
